<div>
<div class="u-container">
<%= image_tag @user.photo || "", class: "empty-square" %>
    <div class="u-info">
    <h3><%= link_to @user.name, @user %></h3>

      <br>
      Number of posts: <%= @user.posts_counter %>
    </div>
</div>
 <div class="bio">
      <h5>Bio</h5>
      <p><%= @user.bio %></p>
  </div>
  <h2>Recent Posts</h2>
<% Post.limit(3).each do |post| %>
  <div class="post-preview">
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
    <p>Number of comments: <%= post.comments.count %></p>
    <p>Number of likes: <%= post.likes_counter %></p>
  </div>
<% end %>


  <% if Post.count > 3 %>
    <%= link_to "Show More Posts", user_posts_path(@user) %>
  <% end %>
</div>
