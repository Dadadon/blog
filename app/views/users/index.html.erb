<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .text-center {
    text-align: center;
  }

  .my-4 {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .row {
    display: flex;
    flex-wrap: wrap;
    margin: -0.5rem;
  }

  .col-md-4 {
    flex-basis: 33.33333%;
    max-width: 33.33333%;
    padding: 0.5rem;
    box-sizing: border-box;
  }

  .card {
    position: relative;
    display: flex;
    flex-direction: row;
    background-color: #343a40;
    color: #fff;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .card-img-top {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .card-body {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .card-title {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: 500;
    line-height: 1.2;
  }

  .card-text {
    margin-bottom: 0;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
  }

  .card-footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 0.5rem;
    background-color: #007bff;
    border-radius: 0.5rem;
  }

  .btn {
    display: inline-block;
    font-weight: 400;
    color: #fff;
    text-align: center;
    vertical-align: middle;
    user-select: none;
    background-color: transparent;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.5rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out,
      border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }

  .btn:hover {
    color: #007bff;
    background-color: #fff;
    border-color: #007bff;
  }

  @media (max-width: 767.98px) {
    .col-md-4 {
      flex-basis: 50%;
      max-width: 50%;
    }
  }
</style>

<div class="container">
  <h1 class="text-center my-4">All Users</h1>

  <div class="row d-flex flex-wrap g-4 w-50">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <div class="card h-100 bg-dark text-white">
          <img src="<%= user.photo ? user.photo : 'https://images.unsplash.com/photo-1582567056798-7dc94989e56d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80' %>" class="card-img-top u_image" alt="User image">
          <div class="card-body">
            <h5 class="card-title"><%= link_to user.name, user, class: "text-white" %></h5>
            <p class="card-text">Number of posts: <%= user.posts_counter %></p>
          </div>
          <div class="card-footer bg-primary h-100">
            <%= link_to "View profile", user, class: "btn btn-outline-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
