<div class="u-container">
<%= image_tag @user.photo || "", class: "empty-square" %>
    <div class="u-info">
    <h3><%= link_to @user.name, @user %></h3>

      <br>
      Number of posts: <%= @user.posts_counter %>
    </div>
</div>
  <% Post.limit(3).each do |post| %>
  <div class="post-preview">
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
  </div>
<% end %>

<div class="comments">
<h3>Comments:</h3>
</div>

